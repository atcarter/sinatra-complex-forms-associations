
<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="owner[name]" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <h3>Existing Owners</h3>
    <% @owners.each do |own| %>
      <input type="radio" name="pets[owner_ids][]" id="<%= own.id %>" value="<%= own.id %>" <%='checked' if own.id == @owner.id) %>><%= own.name %><br>
    <% end %>
    <br>

    <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name=:owner[name] id="owner_name">
  <br><br>

  <input type="submit" value="Update Pet">
  </form> 